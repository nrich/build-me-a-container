# set root SSH key
mkdir /root/.ssh/
chmod 0700 /root/.ssh/
touch /root/.ssh/authorized_keys
chmod 0644 /root/.ssh/authorized_keys
echo $SSHKEY >> /root/.ssh/authorized_keys

